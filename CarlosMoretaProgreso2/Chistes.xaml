<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarlosMoretaProgreso2.Chistes"
             Title="Chistes">

    <AbsoluteLayout>
        
        <Label x:Name="ChisteLabel"
               Text="Cargando chiste..."
               FontSize="22"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               AbsoluteLayout.LayoutBounds="0.5,0.5,0.9,0.6"
               AbsoluteLayout.LayoutFlags="All" />

        
        <Button Text="Otro chiste"
                x:Name="OtroChisteButton"
                AbsoluteLayout.LayoutBounds="0.5,1,0.8,60"
                AbsoluteLayout.LayoutFlags="WidthProportional,PositionProportional"
                Clicked="OtroChisteButton_Clicked"/>
    </AbsoluteLayout>
</ContentPage>
