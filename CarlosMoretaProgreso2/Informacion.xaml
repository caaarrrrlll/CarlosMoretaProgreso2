<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarlosMoretaProgreso2.Informacion"
             Title="Informacion">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <BoxView Color="AliceBlue"/>
        <Label Text="Nombre= Carlos Moreta"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontAttributes="Bold"
               FontSize="24"/>
        <BoxView Grid.Row="1"
                 Color="AliceBlue"/>
        <Label Grid.Column="1"
               Text="Fecha: 05/06/2025"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="Black"
               FontAttributes="Bold"
               FontSize="24"/>
        
        <Label Grid.Row="1"
               Text="Intereses : Dibujar"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="Black"
               FontAttributes="Bold"
               FontSize="24"/>
        
        <Label Grid.Row="1"
               Grid.Column="1"
               Text="Version:1.0"
               TextColor="Black"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontAttributes="Bold"
               FontSize="24"/>


    </Grid>
</ContentPage>