<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarlosMoretaProgreso2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="BIENVENIDOS A LA APLICACION DE CARLOS MORETA"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontSize="50"
                Style="{StaticResource Headline}"
                />

            <Image
                Source="carlos.jpeg"
                HeightRequest="185"
                Aspect="AspectFit"
                />

            <Label
                Text="Selecciona uno de los butones"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />

            <Button
                x:Name="IraChistes"
                Text="Chistes" 
                Clicked="IraChistes_Clicked"
                VerticalOptions="Center"
                FontSize="20"
                HorizontalOptions="Fill"
                BackgroundColor="Black"
                />
            <Button
                x:Name="IraInformacion"
                Text="Informacion"
                Clicked="IraInformacion_Clicked"
                VerticalOptions="Center"
                FontSize="20"
                HorizontalOptions="Fill"
                BackgroundColor="Black"/>
                
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
